                                <PasswordBox x:Name="password_box"  MaxLength="6" PasswordChar="*" HorizontalAlignment="Left" Margin="146.8,206,0,0" VerticalAlignment="Top" Width="463" Height="46" FontSize="25" Grid.Column="1"/>
