                                <Button Style="{StaticResource myButtonStyle}" x:Name="buttonUris" Content="הוסף תמונה:" Grid.Row="15" Grid.Column="2" Margin="3.4,0,0.2,0.2" FontSize="15" Click="buttonUris_Click"/>
